{
    "name": "potos_league",
    "version": "1.0.0",
    "description": "patinoire",
    "watch": {
        "build-css": {
            "patterns": "assets/css",
            "extensions": "scss,sass",
            "quiet": false
        },
        "build-img": {
            "patterns": [
                "assets/images"
            ],
            "extensions": "png, gif, jpeg, jpg",
            "quiet": false
        }
    },
    "scripts": {
        "build-css": "node-sass -r assets/css -o public/build/css --output-style=compressed",
        "build-img": "imagemin assets/images/* --out-dir=public/build/img",
        "watch": "npm-watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sqr81/Potos_League.git"
    },
    "author": "Yann Sanquer",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sqr81/Potos_League/issues"
    },
    "homepage": "https://github.com/sqr81/Potos_League#readme",
    "devDependencies": {
        "imagemin-cli": "^4.0.1",
        "node-sass": "^4.13.1",
        "sass-loader": "^8.0.0",
        "webpack": "^4.41.2"
    },
    "dependencies": {
        "bootstrap": "^4.4.1",
        "jquery": "^3.4.1",
        "npm-watch": "^0.6.0",
        "popper.js": "^1.16.0"
    },
    "build-img": {
        "patterns": [
            "src/img"
        ],
        "extensions": "png, gif, jpeg, jpg",
        "quiet": false
    }
}
