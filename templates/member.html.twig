{% extends 'base.html.twig' %}
{% block navigation %}{% endblock %}
{% block body %}
  
<aside>	
		{{ include('includes/navigation.html.twig') }}	
		
		<div class="aside">
			<div class="container_notif">
				<div class="rectangle">
					<div class="notification-text">
						<i class="material-icons">
							info
						</i>

						<span>
							&nbsp;&nbsp;test notification.
						</span>
					</div>
				</div>
			</div>
			<!-------------carousel-------------------------->
			<div class="carousel">
				<div class="content-slider">
					<h3>
						Le coach de la semaine
					</h3>

					<div class="slider">
						<div class="mask">
							<ul>
								<li class="anim1">
									<div class="quote">
										-Brian-
									</div>
									<div class="source"></div>
								</li>
								<li class="anim2">
									<div class="quote">
										The Playaz
									</div>
									<div class="source"></div>
								</li>
								<li class="anim3">
									<div class="quote">
										125 pts
									</div>
									<div class="source"></div>
								</li>
								<li class="anim4">
									<div class="quote">
										Wilson
									</div>
									<div class="source"></div>
								</li>
								<li class="anim5">
									<div class="quote">
										37pts
									</div>
									<div class="source"></div>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<!------------fin carousel------------------------>
		</div>
	</aside>   
<div id="bloc_page">
  <header>
		<div class="container_navigation mt-5">
			{{ include('includes/titre.html.twig') }}
		</div>

		<div id="separateur">
			<img src="/potos_league/assets/images/separateur.png" alt="separateur"/>
		</div>
	</header>
  

  <div class="containerMember">
    <div class="headerMember-containerMember">
      <img src="https://s17.postimg.cc/ypm5ye95r/image.jpg" alt="" class="headerMember-image" />
      <div class="headerMember">
        <svg fill="#ffffff" height="18" viewBox="0 0 24 24" width="18" xmlns="http://www.w3.org/2000/svg" class="header-icon">
          <path d="M0 0h24v24H0z" fill="none"/>
          <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
        </svg>

        <svg fill="#ffffff" height="18" viewBox="0 0 24 24" width="18" xmlns="http://www.w3.org/2000/svg" class="u-float-right header-icon">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          <path d="M0 0h24v24H0z" fill="none"/>
        </svg>
        <h1 class="main-heading">ALEXIS<br/>NISSA DOLPHINS</h1>
        <span class="tag">#21</span>
        <span class="tag">CB</span>
        <span class="tag">Nissa Dolphins</span>
        <div class="stats">
          <span class="stat-module">
            Saisons: <span class="stat-number">8</span>
          </span>
          <span class="stat-module">
            Titres: <span class="stat-number">2</span>
          </span>
        </div>
      </div> <!-- END header -->
    </div>
    
    <div class="overlay-header"></div>
    
    <div class="bodyMember">
      <img src="/potos_league/assets//images/alexis.jpg" alt="Alexis" class="body-image" />
      <div class="body-action-button u-flex-center">
        <svg fill="#ffffff" height="28" viewBox="0 0 24 24" width="28" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          <path d="M0 0h24v24H0z" fill="none"/>
        </svg>
      </div>
      <img src="/potos_league/assets//images/bucs2.png" alt="Alexis" />
      
      <div class="u-clearfix"></div>
      <div class="body-info">
        <p>
          Hugh Michael Jackman is an Australian actor, singer and producer. Jackman has won international recognition for his roles in variety of film genres.
        </p>
        <p>
        In Broadway theatre, Jackman won a Tony Award for his role in The Boy from Oz. A four-time host of the Tony Awards themselves, he won an Emmy Award for one of these appearances. Jackman also hosted the 81st Academy Awards on 22 February 2009.
        </p>
      </div>
      <div class="body-more">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div class="cardMember u-clearfix">
        <span class="cardMember-heading"></span>
        <span class="cardMember-more">
          <svg fill="#777777" height="18" viewBox="0 0 24 24" width="18" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 0h24v24H0z" fill="none"/>
            <path d="M6 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm-6 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
          </svg>
        </span>
        <ul>
          <div class="cardMember-list ">        
              <li><img src="/potos_league/assets//images/alpes.jpg" alt="" /></li>         
          </div>
        </ul>
      </div>
    </div>
    
  </div>
</div>


{% endblock %}